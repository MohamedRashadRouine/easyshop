    <item type="userStory">
        <id>US001</id>
        <feature>Login and Registration</feature>
        <description>As a Visitor, I want to register for an account so that I can become a User.</description>
        <priority>High</priority>
        <estimation>3</estimation>
    </item>

    <item type="userStory">
        <id>US002</id>
        <feature>Viewing Content</feature>
        <description>As a User, I want to see blog posts and products on the website.</description>
        <priority>Medium</priority>
        <estimation>5</estimation>
    </item>

    <item type="userStory">
        <id>US003</id>
        <feature>Multilingual Support</feature>
